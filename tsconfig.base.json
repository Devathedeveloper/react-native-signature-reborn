{
  "compilerOptions": {
    "target": "es2019",
    "rootDir": "src",
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "lib", "android", "ios", "example", "__tests__", "tests"]
}
